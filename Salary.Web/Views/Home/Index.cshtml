@model Salary.ViewModel.SalaryCreateModel
@{
    ViewData["Title"] = "Home Page";
}

@using(Html.BeginForm("CreateSalary", "Salary", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Income)
    @Html.TextBoxFor(m => m.Income)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.KiwiSaver)
    @Html.TextBoxFor(m => m.KiwiSaver)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.StudentLoan)
    @Html.TextBoxFor(m => m.StudentLoan)
</div>
<button type="submit">Submit</button>
}